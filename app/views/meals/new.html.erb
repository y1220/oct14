<div class="main meals-new">
  <div class="container">
    <h1 class="users-heading">New recipe</h1>
    <div class="form">
      <div class="form-body">
        <% @meal.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_tag("/meals/create",{multipart:true}) do %>
          <p>title</p>
          <textarea name="title" required="true"></textarea>
          <p>content</p>
          <textarea name="content" required="true"></textarea>
          <p>type</p>
          <select name="meal_type" id="typelist" >
            <% @mealTypes.each do |mealType|%>
              <option value="<%= mealType.description %>"><%=mealType.description%></option>
            <% end%>
          </select>
          <p>image(optional: choose image file(jpg, jpeg, png))</p>
          <input name="image" type="file" accept="image/*">
          <p></p>
          <input type="submit" value="send">
        <%end%>
      </div>
    </div>
  </div>
</div>