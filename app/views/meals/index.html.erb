<div class="main meals-index">
  <div class="container">
    <h1 class="users-heading">all meals</h1>
    <% @meals.each do |meal|%>
      <div class="meals-index-item">
        <%#byebug%>
        <% if meal.star == true %>
          <div class= "king">
            <span class="fa fa-star"></span>
          </div>
          <% if @current_user.role != "basic"%>
            <%= link_to(meal.title,"/meals/#{meal.id}")%>
          <% else %>
            <%= link_to(meal.title,"/users/upgrade")%>
          <% end %>
        <% else %>
          <%= link_to(meal.title,"/meals/#{meal.id}")%>
        <% end %>
        <div class="meal-user-name">
          <%= link_to(meal.user.name,"/users/#{meal.user.id}")%>
          <%#= meal.title %>
          <%#= meal.user.name %>
        </div>
      </div>
    <% end%>
  </div>
</div>
