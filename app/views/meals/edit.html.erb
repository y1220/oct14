<div class="main meals-new">
  <div class="container">
    <h1 class="users-heading">Modify the recipe</h1>
    <div class="form">
      <div class="form-body">
        <% @meal.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_for @meal,:url => {controller: "meals", action: "update"}, multipart: true do |f| %>
          <p>title</p>
          <%= f.text_field :title ,value: @meal.title%>
          <p>content</p>
          <%= f.text_area :content ,value: @meal.content%>
          <p>type</p>
          <%= f.select(:meal_type, @descriptions, {}, { :class => 'choose_the_meal_type' }) %>
          <p>image(optional: choose image file(jpg, jpeg, png))</p>
          <%if @meal.image.present?%>
            <img src="<%= "#{@meal.image}"%>">
          <%end%>
          <%= f.file_field :image, accept: 'image/*'%>
          <p></p>
          <%= f.submit%>
        <%end%>
      </div>
    </div>
  </div>
</div>