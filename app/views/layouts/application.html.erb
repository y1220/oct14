<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <div class="header-logo">
        <%= link_to("Happy recipe","/")%>
      </div>
      <ul class="header-menus">
        <li>
          <%= link_to("About us","/about")%>
        </li>
        <li>
          <%= link_to("meals","/meals/index")%>
        </li>
        <li>
          <%= link_to("new meal","/meals/new")%>
        </li>
        <li>
          <%= link_to("all users","/users/index")%>
        </li>
      </ul>
    </header>
    <%= yield %>
  </body>
</html>