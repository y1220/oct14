<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <div class="header-logo">
        <%= link_to("Happy recipe","/")%>
      </div>
      <ul class="header-menus">
        <% if session[:user_id] %>
          <li>
            user_id:
            <%=session[:user_id]%>
          </li>
          <li>
            <%= link_to("Meals","/meals/index")%>
          </li>
          <li>
            <%= link_to("New meal","/meals/new")%>
          </li>
          <li>
            <%= link_to("All users","/users/index")%>
          </li>
          <li>
            <%= link_to("logout", "/logout", {method: :post})%>
          </li>
        <%else%>
          <li>
            <%= link_to("About us","/about")%>
          </li>
          <li>
            <%= link_to("Sign up","/signup")%>
          </li>
          <li>
            <%= link_to("Login","/login")%>
          </li>
        <% end %>
      </ul>
    </header>
    <%= yield %>
  </body>
</html>