<div class="main meals-index">
  <div class="container">
    <h1 class="users-heading">all courses</h1>
    <% @courses.each do |course|%>
      <div class="meals-index-item">
        <%#= link_to(course.name,"/courses/new")%>
        <%=link_to(course.name, "/courses/#{course.id}") %>
        <div class="meal-user-name">
          <%= link_to(course.user.name,"/users/#{course.user_id}")%>
          <%if Participant.find_by(user_id: @current_user.id, course_id: course.id).present?%>
            <div class= "king">
              <span class="fa fa-star"></span>
            </div>
          <% end %>
          <%#= meal.title %>
          <%#= meal.user.name %>
        </div>
      </div>
    <% end%>
  </div>
</div>
