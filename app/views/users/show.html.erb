<div class="main user-show">
  <div class="container">
    <div class="user">
      <center>
        <h2><%= @user.name%></h2>
        <p><%= @user.email%></p>
        <% if @user.id==@current_user.id%>
          <div class="col-md-8">
            <a type="button" href="/users/<%=@user.id%>/edit" 
                                  class= "btn btn-primary">
              Modify
            </a>
            <a type="button" href="/users/<%=@user.id%>" 
                                data-toggle="modal" data-target="#deleteUser" class= "btn btn-danger">
              Delete
            </a>
          </div>
          <%= link_to("modify", "/users/#{@user.id}/edit") %>
          <%= link_to("delete", "/users/#{@user.id}",{method:"delete"}) %>
        <%end%></center>
      <form action="destroy" method="delete">
        <a type="button" data-toggle="modal" data-target="#deleteUser" class= "btn btn-danger"
                                href="/users/<%=@user.id%>" onclick="parentNode.submit();">
          Delete
        </a>
        <input type="hidden" name="mess" value="delete">
      </form>
    </div>
    <% @user.meals.each do |meal| %>
      <div class="meals-index-item">
        <%= link_to(meal.title, "/meals/#{meal.id}") %>
      </div>
    <% end %>
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" href="#">Active</a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
          <a class="dropdown-item" href="#">Something else here</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="#">Separated link</a>
        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Link</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" href="#">Disabled</a>
      </li>
    </ul>
  </div>
</div>
<div class="modal fade" tabindex="-1" id="deleteUser" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Happy recipe</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete your account?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
        <button type="button" class="btn btn-danger">
          <%= link_to("Yes", "/users/#{@user.id}",{method:"delete",
        class: 'css_class', style: 'color:#FFFFFF'}) %></button>
      </div>
    </div>
  </div>
</div>
