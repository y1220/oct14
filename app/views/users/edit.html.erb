<div class="main users-new">
  <div class="container">
    <h1 class="form-heading">Modify the user information</h1>
    <div class="form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_tag("/users/#{@user.id}/update") do%>
          <p>user name</p>
          <input name="user_name" value="<%=@user.name%>">
          <p>email</p>
          <input name="email" value="<%=@user.email%>">
          <p>password</p>
          <input name="password" value="<%=@user.password%>" type="password">
          <input type="submit" value="save">
        <%end%>
      </div>
    </div>
  </div>
</div>