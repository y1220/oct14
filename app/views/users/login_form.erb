<div class="main users-new">
  <div class="container">
    <div class="form-heading">Login</div>
    <div class="form users-form">
      <div class="form-body">
        <%= form_tag("/login") do%>
        <p>email</p>
        <input placeholder="has to include @ and ." name="email" required="true">
        <p>password</p>
        <input placeholder="4-8 numbers or characters" name="password" type="password" required="true">
        <input type="submit" value="login">
        <%end%>
      </div>
    </div>
  </div>
</div>